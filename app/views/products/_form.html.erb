<%= form_for(@product, :html => { :multipart => true, class: "form-horizontal" }) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="control-group">
  <label class="control-label" for="name">产品名称</label>
  <div class="controls">
    <%= f.text_field :name, class: "input-large", type: "text" %>
  </div>
</div>
<div class="control-group">
  <label class="control-label" for="prod_model">产品型号</label>
  <div class="controls">
    <%= f.text_field :prod_model, class: "input-large", type: "text" %>
  </div>
</div>
<div class="control-group">
  <label class="control-label" for="prod_type">产品类型</label>
  <div class="controls">
    <%= f.text_field :prod_type, class: "input-large", type: "text" %>
  </div>
</div>

<div class="control-group">
  <label class="control-label" for="description">产品概述</label>
  <div class="controls">
    <%= f.text_area :description, class: "input-madium", rows: 8 %>
  </div>
</div>
<div class="control-group">
  <label class="control-label" for="feature">产品特性</label>
  <div class="controls">
    <%= f.text_area :feature, class: "input-madium", rows: 8 %>
  </div>
</div>
<div class="control-group">
  <label class="control-label" for="parameter">详细参数</label>
  <div class="controls">
    <%= f.text_area :parameter, class: "input-madium", rows: 8 %>
  </div>
</div>

<div class="control-group">
  <label class="control-label" for="picture">产品图片</label>
  <div class="controls">
    <%= f.file_field :picture %>
  </div>
</div>

  <div class="actions">
    <%= f.submit "提交", class: "btn" %>
  </div>
<% end %>
