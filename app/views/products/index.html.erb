<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Prod model</th>
      <th>Prod type</th>
      <th>Description</th>
      <th>Feature</th>
      <th>Parameter</th>
      <th>Picture</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.prod_model %></td>
        <td><%= product.prod_type %></td>
        <td><%= product.description %></td>
        <td><%= product.feature %></td>
        <td><%= product.parameter %></td>
        <td><%= image_tag(product.picture_url, :width => 60) if product.picture.present? %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

